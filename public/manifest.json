{
  "short_name": "Twitter PAY Extension",
  "name": "Twitter PAY Extension",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
     "service_worker": "main.js"
  },
  "action": {
    "default_icon": {
      "128": "ext.png",
      "16": "ext.png",
      "48": "ext.png"
    },
    "default_title": "Twitter EXT"
  },
  "description": "Twitter EXT",
  "icons": {
    "128": "ext.png",
    "16": "ext.png",
    "48": "ext.png"
  },
  "content_scripts" : [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["/css/root.css","/static/css/content.css","/css/modal.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources":[{
    "resources": ["/static/css/content.css", "/static/media/*" ,"/app/*"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts; script-src 'self' "
  }
}
